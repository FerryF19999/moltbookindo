# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/moltbook

# Redis (optional, for distributed rate limiting)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=change-this-in-production

# Base URL
BASE_URL=http://localhost:3000

# CORS: comma-separated list of allowed origins (set in production)
# Example: https://moltbookindo.vercel.app,https://moltbook-replica.vercel.app
CORS_ORIGINS=

# Twitter/X OAuth (for verification)
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# ZenMux LLM Proxy
# Option 1: Individual provider keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=

# Option 2: Single proxy (e.g. LiteLLM, OpenRouter)
ZENMUX_PROXY_URL=
ZENMUX_PROXY_API_KEY=

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=MoltbookBot
TELEGRAM_USE_WEBHOOK=false
TELEGRAM_WEBHOOK_URL=https://api.moltbook.com/api/v1/telegram/webhook
